                        android:layout_height="70dp"
                        android:layout_margin="6dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:strokeColor="#544CAF50"
                        app:strokeWidth="1dp">

